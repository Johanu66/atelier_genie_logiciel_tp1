<% content_for :head do %>
<% end %>

<div style="height: 100vh;" class="container d-flex justify-content-center align-content-center">
  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <h3 class="text-center mb-5">Forgot your password?</h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "loginForm" }) do |f| %>
          <div class="form-group input-group my-3">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>         
          </div>
          <div class="form-group my-3">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success d-block w-100" %>
          </div>
          <div class="form-group text-center">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>        
      </div>  
    </div>    
  </div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>
